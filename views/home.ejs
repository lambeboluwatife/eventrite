<section class="home">
	<%- include ('./partials/header') %>

	<div class="container hero">
		<h5 class="hero__date">October 18 - 19, 2022</h5>
		<h1 class="hero__title">Leap Con</h1>
		<p class="hero__description">Exhibition Center, Melbourne, Australia</p>
		<a href="#" class="btn btn__primary">Purchase Tickets</a>
	</div>
</section>

<h3 class="aside__heading">Upcoming Events</h3>
<section class="aside">
	<% if (events == "") { %>
	<h4 class="events__empty">No upcoming events yet!</h4>
	<div class="col-lg-4 col-md-6">
		<% } else { %> <% events.forEach((event) => { %>
		<div class="aside__event">
			<a class="card hover-shadow-sm" href="/events/<%= event._id%>">
				<img
					src="/<%= event.image %>"
					alt="Cover Image"
					class="card-img-top aside__event--image"
				/>
				<div class="card-body d-flex flex-column aside__event--txt">
					<div class="d-flex">
						<div class="ml-3 text-primary">
							<div class="badge badge-primary mb-2 aside__location">
								<%= event.location %>
							</div>
							<h4 class="mb-2 text-dark aside__event-name">
								<%= event.name %>
							</h4>
							<small class="text-dark aside__date"
								><%= event.date.toDateString() %></small
							>
							<div class="text-small text-muted mt-3 aside__host">
								<img
									src="/<%= event.author.image %>"
									alt="user"
									class="avatar avatar-sm"
								/>
								<span class="aside__username">
									Hosted By <%= event.author.username %>
								</span>
							</div>
							<!-- <div class="text-small text-muted mt-3">
										Click to read more...
									</div> -->
						</div>
					</div>
				</div>
			</a>
		</div>
	</div>
	<% }) %> <% } %>
</section>
<a href="/events" class="btn btn__tertiary events__link"
	>Other Events <span class="events__arrow">&rarr;</span>
</a>

<%- include ('./partials/footer') %>
